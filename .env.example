# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Next.js public vars (same as above, prefixed for client-side access)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Redis - Upstash (for Bull job queue)
# Get this from Upstash console: https://console.upstash.com
# Format: rediss://default:PASSWORD@ENDPOINT:PORT
REDIS_URL=rediss://default:your_password@your-endpoint.upstash.io:6379

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# Scraper URL (set this to Railway URL in production)
NEXT_PUBLIC_SCRAPER_URL=http://localhost:4000

# Scraper Settings
SCRAPER_CRON_SCHEDULE=0 3 * * *
SCRAPER_RATE_LIMIT_MIN_MS=2000
SCRAPER_RATE_LIMIT_MAX_MS=5000
