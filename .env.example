# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Next.js public vars (same as above, prefixed for client-side access)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# RescueGroups.org API (primary data source - FREE)
# Register at: https://rescuegroups.org/services/adoptable-pet-data-api/
RESCUEGROUPS_API_KEY=your_rescuegroups_api_key

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# Sync service URL (set to Railway URL in production)
NEXT_PUBLIC_SCRAPER_URL=http://localhost:4000

# Sync Settings
SYNC_CRON_SCHEDULE=0 3 * * *
SYNC_STALE_HOURS=48
