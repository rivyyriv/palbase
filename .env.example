# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Next.js public vars (same as above, prefixed for client-side access)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Redis - Upstash (for Bull job queue)
# Get this from Upstash console: https://console.upstash.com
# Format: rediss://default:PASSWORD@ENDPOINT:PORT
REDIS_URL=rediss://default:your_password@your-endpoint.upstash.io:6379

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# Scraper URL (set this to Railway URL in production)
NEXT_PUBLIC_SCRAPER_URL=http://localhost:4000

# RescueGroups.org API (primary data source - FREE)
# Register at: https://rescuegroups.org/services/adoptable-pet-data-api/
RESCUEGROUPS_API_KEY=your_rescuegroups_api_key

# Browserless.io (cloud browser for scraping - optional, for fallback scrapers)
# Get your token from: https://www.browserless.io/
BROWSERLESS_TOKEN=your_browserless_token
# BROWSERLESS_ENDPOINT=wss://chrome.browserless.io  # Default, override if using dedicated

# Scraper Settings
SCRAPER_CRON_SCHEDULE=0 3 * * *
SCRAPER_RATE_LIMIT_MIN_MS=2000
SCRAPER_RATE_LIMIT_MAX_MS=5000
