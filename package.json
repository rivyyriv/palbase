{
  "name": "palbase",
  "version": "0.1.0",
  "private": true,
  "description": "Pet adoption aggregator platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "scraper:start": "pnpm --filter @palbase/scraper start",
    "scraper:dev": "pnpm --filter @palbase/scraper dev",
    "web:dev": "pnpm --filter @palbase/web dev",
    "web:build": "pnpm --filter @palbase/web build",
    "admin:dev": "pnpm --filter @palbase/admin dev",
    "admin:build": "pnpm --filter @palbase/admin build",
    "mobile:start": "pnpm --filter @palbase/mobile start",
    "mobile:ios": "pnpm --filter @palbase/mobile ios",
    "mobile:android": "pnpm --filter @palbase/mobile android"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
